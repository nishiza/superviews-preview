{
    "name": "superviews-preview",
    "displayName": "superviews-preview",
    "description": "preview a superviews.js result.",
    "version": "0.0.3",
    "publisher": "nishiza",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.showSuperviewsPreview",
        "onCommand:extension.showSuperviewsPreviewInEditor"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.showSuperviewsPreview",
                "title": "Superviews.js: Open Preview"
            },
            {
                "command": "extension.showSuperviewsPreviewInEditor",
                "title": "Superviews.js: Open Preview in Editor"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Superviews.js configuration",
            "properties": {
                "superviews.mode": {
                    "type": "string",
                    "default": "cjs",
                    "description": "same as api's last argument. (see https://github.com/davidjamesstone/superviews.js#api)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.12.19",
        "@types/sanitize-html": "^1.18.2",
        "mocha": "^5.2.0",
        "typescript": "^3.2.4",
        "vscode": "^1.1.28"
    },
    "dependencies": {
        "sanitize-html": "^1.20.0",
        "superviews.js": "^3.0.4"
    }
}
